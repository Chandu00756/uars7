# .env.local   â€“ dev
# Use only VITE_API_URL for frontend API base URL
VITE_API_URL=http://localhost:8080

# Remove or update REACT_APP_API_BASE_URL if not used
# REACT_APP_API_BASE_URL=http://localhost:8080/api
REACT_APP_WS_BASE_URL=ws://localhost:8080

# Authentication endpoints (used in code, not for base URL)
REACT_APP_AUTH_ENDPOINT=/auth/login/begin
REACT_APP_TOKEN_REFRESH_ENDPOINT=/auth/refresh

# WebSocket Configuration
REACT_APP_WS_RECONNECT_ATTEMPTS=5
REACT_APP_WS_RECONNECT_INTERVAL=3000
REACT_APP_WS_HEARTBEAT_INTERVAL=30000

# Development
REACT_APP_DEBUG_MODE=true
REACT_APP_LOG_LEVEL=debug
